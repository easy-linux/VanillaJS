{
  "manifest_version": 3,
  "name": "Eat and Run Bot",
  "version": "1.1",
  "description": "Простейший бот для игры Eat and Run",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/init.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": "icons/icon32x32.png",
    "default_title": "Read and Run Bot"
  },
  "icons": {
    "16": "icons/icon16x16.png",
    "32": "icons/icon32x32.png",
    "48": "icons/icon48x48.png",
    "128": "icons/icon128x128.png"
  }
}